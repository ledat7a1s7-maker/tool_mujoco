<mujoco model="test">
  <option gravity="0 0 -9.81" timestep="0.002" solver="Newton" iterations="100"/>
  <worldbody>
    <geom type="plane" pos="0 0 -0.2" size="5 5 0.1" rgba="0.8 0.8 0.8 1"/>
    <body name="link1" pos="0 0 0 ">
      <joint type="hinge" axis="0 0 1" damping="0.1" name="link1_joint"/>
      <geom type="capsule" fromto="0 0 0 0.5 0 0" mass="10" friction="0.8 0.01 0.001" size="0.05"/>
      <body name="link2" pos="0.5 0 0">
        <joint type="hinge" axis="0 0 1" damping="0.1" name="link2_joint"/>
        <geom type="capsule" fromto="0 0 0 1 0 0" mass="10" friction="0.8 0.01 0.001" size="0.05"/>
        <site name="link2_end" pos="1 0 0" size="0.02"/>
      </body>
    </body>
    <body name="slider" pos="1.5 0 0">
      <joint type="slide" axis="1 0 0" damping="1.0" name="slider_joint"/>
      <geom type="box" size="0.1 0.1 0.1" mass="10" friction="1 0.01 0.001"/>
      <site name="slider_site" pos="0 0 0" size="0.02"/>
    </body>
  </worldbody>
  <equality>
    <connect site1="link2_end" site2="slider_site"/>
  </equality>
  <actuator>
    <motor joint="link1_joint" gear="1" ctrlrange="-5 5"/>
  </actuator>
</mujoco>